<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/black</item>
        <item name="buttonStyle">@style/ButtonElevatedStyle</item>
    </style>

    <style name="ButtonElevatedStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/white</item>
        <item name="fontFamily">@font/product_sans_regular</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="ButtonOutlinedStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="fontFamily">@font/product_sans_regular</item>
        <item name="android:textColor">@color/blue</item>
    </style>

</resources>
