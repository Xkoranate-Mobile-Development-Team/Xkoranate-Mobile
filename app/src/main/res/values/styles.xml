<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/gradient_red_like</item>
        <item name="colorPrimaryDark">@color/gradient_red_like</item>
        <item name="colorAccent">@color/green</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondary">@color/yellow</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:windowBackground">@drawable/gradient_color</item>
        <item name="checkedIconTint">@color/black</item>
        <item name="materialAlertDialogTheme">@style/MaterialAlertDialog.Rounded</item>
        <item name="buttonStyle">@style/ButtonElevatedStyle</item>
    </style>

    <!-- MaterialAlertDialog Theme-->
    <style name="MaterialAlertDialog.Rounded" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">
            @style/ShapeAppearanceOverlay.MaterialAlertDialog.Rounded
        </item>
        <item name="materialAlertDialogBodyTextStyle">@style/MaterialAlertDialog.App.Title.Text
        </item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.App.Title.Text
        </item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="ShapeAppearanceOverlay.MaterialAlertDialog.Rounded" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSize">18dp</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="fontFamily">@font/meiryo_ui_w53_regular</item>
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="fontFamily">@font/meiryo_ui_w53_regular</item>
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="MaterialAlertDialog.App.Title.Text" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="fontFamily">@font/meiryo_ui_w53_regular</item>
        <item name="android:textColor">@color/gradient_red_like</item>
    </style>


    <!-- DrawerLayout NavigationView Theme-->
    <style name="NavigationViewTextAppearance" parent="TextAppearance.AppCompat.Medium">
        <item name="fontFamily">@font/meiryo_ui_w53_regular</item>
    </style>

    <!-- Button styles-->
    <style name="ButtonElevatedStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/green</item>
        <item name="fontFamily">@font/meiryo_ui_w53_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ButtonOutlinedStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="fontFamily">@font/meiryo_ui_w53_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextViewMedium">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextViewSmall">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="PromptTextStyle" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/dark</item>
        <item name="fontFamily">@font/meiryo_ui_w53_regular</item>
    </style>

    <style name="ShapeAppearanceOverlay.CornerSize10Percent" parent="">
        <item name="cornerSize">12dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

</resources>
