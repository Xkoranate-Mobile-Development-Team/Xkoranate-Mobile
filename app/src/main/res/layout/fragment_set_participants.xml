<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".ui.SetParticipantsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_set_participants"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="30dp"
            android:text="Set Participants"
            style="@style/TextViewMedium"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5"/>

        <TextView
            android:id="@+id/tv_min_skill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/edit_text_min_skill"
            app:layout_constraintEnd_toStartOf="@id/guide"
            android:text="Min Skill"
            android:layout_marginEnd="30dp"
            style="@style/TextViewSmall"/>

        <EditText
            android:id="@+id/edit_text_min_skill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            app:layout_constraintStart_toEndOf="@id/guide"
            app:layout_constraintTop_toBottomOf="@id/tv_set_participants"/>

        <ImageButton
            android:id="@+id/btn_increase_min"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_baseline_chevron_right_24"
            app:layout_constraintStart_toEndOf="@id/edit_text_min_skill"
            app:layout_constraintBottom_toBottomOf="@id/edit_text_min_skill"/>

        <ImageButton
            android:id="@+id/btn_decrease_min"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_baseline_chevron_left_24"
            app:layout_constraintEnd_toStartOf="@id/edit_text_min_skill"
            app:layout_constraintBottom_toBottomOf="@id/edit_text_min_skill"/>


        <TextView
            android:id="@+id/tv_max_skill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/edit_text_max_skill"
            app:layout_constraintEnd_toStartOf="@id/guide"
            android:text="Max Skill"
            android:layout_marginEnd="30dp"
            style="@style/TextViewSmall"/>

        <EditText
            android:id="@+id/edit_text_max_skill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            app:layout_constraintStart_toEndOf="@id/guide"
            app:layout_constraintTop_toBottomOf="@id/tv_min_skill"/>

        <ImageButton
            android:id="@+id/btn_increase_max"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_baseline_chevron_right_24"
            app:layout_constraintStart_toEndOf="@id/edit_text_max_skill"
            app:layout_constraintBottom_toBottomOf="@id/edit_text_max_skill"/>

        <ImageButton
            android:id="@+id/btn_decrease_max"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_baseline_chevron_left_24"
            app:layout_constraintEnd_toStartOf="@id/edit_text_max_skill"
            app:layout_constraintBottom_toBottomOf="@id/edit_text_max_skill"/>

        <RelativeLayout
            android:id="@+id/recyclerView_container"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/tv_max_skill"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btn_continue"
            android:layout_marginBottom="15dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/recycler_view_bg"
            android:layout_marginTop="30dp"
            android:padding="10dp">

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"/>


        </RelativeLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_continue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cornerRadius="30dp"
            android:text="Continue"
            android:layout_marginBottom="30dp"
            android:layout_marginEnd="50dp"
            android:layout_marginStart="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
        />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
